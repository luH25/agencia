@model IEnumerable<S.I_AgenciaViajes.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Reservaciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreTurista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadTuristas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoViaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComprobantePago)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreTurista)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadTuristas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NroReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoViaje)
                </td>
                <td>
                    <img src="/comprobantes/@item.ComprobantePago" width="100px" height="100px" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-dark">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>           
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
